@using Domain.Users
@model IEnumerable<Domain.Users.User>

@{
    ViewData["Title"] = "Overzicht van Users";
    Layout = "_Layout";
}

<body>
<h2>Hier zie je een overzicht van alle users</h2>
<hr/>
<div class="container">
    <form>
        <div>
            Zoeken op naam: <input type="text" name="searchString" value="@ViewData["currentFilter"]"/>
            <button type="submit">Zoeken</button> |
            <a asp-action="CollectAllUsers">Filter legen</a>
        </div>
    </form>
</div>
<table class="table">
    <thead>
    <tr>
        <th><a asp-action="CollectAllUsers">Id</a></th>
        <th><a asp-action="CollectAllUsers" asp-route-sortOrder="platform">Platform</a></th>
        <th><a asp-action="CollectAllUsers" asp-route-sortOrder="name">Naam</a></th>
        <th><a asp-action="CollectAllUsers" asp-route-sortOrder="birthday">Geboortedatum</a></th>
        <th><a asp-action="CollectAllUsers" asp-route-sortOrder="role">Rol</a></th>
        <th>Banned</th>
        <th>Actief</th>
    </tr>
    </thead>
    <tbody>
    @foreach (User user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Platform</td>
            <td>@user.Name</td>
            <td>@user.Birthdate.ToString("dd-MM-yyyy")</td>
            <td>@user.Role</td>
            <td>@user.Banned</td>
            <td>@user.Active</td>
            <td>
                @if (@user.Banned)
                {
                    <text><a asp-action="ToggleBanUser">Ban opheffen</a></text>
                }
                else
                {
                    <text><a asp-action="ToggleBanUser">Bannen</a></text>
                }

                @if (@user.Role == Role.LOGGEDIN && user.Active)
                {
                    <text> | <a asp-action="VerifyUser">VerifiÃ«ren</a></text>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
</body>