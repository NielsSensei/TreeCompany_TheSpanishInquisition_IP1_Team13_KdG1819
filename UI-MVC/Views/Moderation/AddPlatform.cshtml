@using Domain.Users
@model CreatePlatformModel
@{
    ViewData["Title"] = "Platforms";
    IEnumerable<Platform> platforms = (IEnumerable<Platform>) ViewData["platforms"];
}

@section Tags {
    <script type="module" src="~/js/showmenu.js" defer></script>
}


@* TODO: Add multiple models: one for list of platforms and one for the creation of a platform*@
<div class="container createPlatform">
    <div class="row">
        <div class="col-md-9">
            <h2>Alle beschikbare platformen</h2>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary" id="activateMenu">Maak een platform</button>
        </div>
    </div>
    <div>
        @if (platforms == null || !platforms.Any())
        {
            <h4>Er zijn geen platforms :(</h4>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>PlatformId</th>
                    <th>Eigenaar</th>
                    <th>Aanpassen</th>
                </tr>
                @foreach (Platform platform in platforms)
                {
                    <tr>
                        <td>
                            <a asp-action="Index" asp-controller="Platform" asp-route-id="@platform.Id">@platform.Name</a>
                        </td>
                        <td>Owner</td>
                        <td>
                            <a asp-action="ChangePlatform" asp-controller="Platform" asp-route-id="@platform.Id">Aanpassen</a>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>

<div id="menu">
    <div class="row">
        <div class="col-md-10">
            <h1>Een nieuw platform maken</h1>
            <form asp-controller="Moderation" asp-action="AddPlatform" method="post">
                <div class="form-group">
                    <label asp-for="Name">Naam van het platform</label>
                    <input asp-for="Name" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Url">Een verkorte URL</label>
                    <input asp-for="Url" class="form-control"/>
                </div>
                <div class="row">
                    <input type="submit" class="btn btn-primary" value="Maak dit platform aan"/><button type="button" class="btn btn-secondary" id="closeMenu">Annuleren</button>
                </div>
            </form>
        </div>
    </div>
</div>