@model CreateTagModel

@{
    ViewData["Title"] = "Voeg een Tag toe";
    Layout = "_Layout";
}

<h2>Voeg een Tag Toe</h2>

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <form asp-controller="Moderation" asp-action="AddTag" method="post" asp-route-tag="@Model" 
                  asp-route-ideation="@ViewData["Ideation"]">
                <div class="form-group">
                    <label>IdeationID</label>
                    <input disabled value="@ViewData["Ideation"]" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Tag">Vul hier de tag in:</label>
                    <input asp-for="Tag" class="form-control"/>
                </div>
                <br/>
                <div class="row">
                    <button class="btn btn-primary" type="submit">Bevestig</button>
                </div>
            </form>
        </div>
    </div>
</div>
