@model Domain.Projects.Ideation

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h1>Een Ideation Aanpassen.</h1>
            <form asp-controller="Moderation" asp-action="ChangeIdeation" method="post" >
                <div class="form-group">
                    <label>ProjectID</label>
                    <input disabled value="@ViewData["Project"]" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Type</label>
                    <input disabled class="form-control" value="Ideation"/>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Titel van de module</label>
                    <input asp-for="Title" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="ExtraInfo">Geef hier extra informatie</label>
                    <input asp-for="ExtraInfo" class="form-control"/>
                </div>
                <br/>
                <div class="row">
                    <button class="btn btn-primary" type="submit">Bevestig</button>
                </div>
            </form>
        </div>
    </div>
</div>