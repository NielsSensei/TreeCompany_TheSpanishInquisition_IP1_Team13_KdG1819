@using Domain.Projects
@using UIMVC.Services
@model LikeViewModel
@inject RoleService Service

<section class="text-center">
@*
OnlyLikeCount = 0,
        FbLikeCount = 1,
        TwitterLikeCount = 2,
        LikeCountAndFbLikeCount = 3,
        LikeCountAndTwitterLikeCount = 4,
        FbLikeCountAndTwitterLikeCount = 5,
        LikeFbAndTwitterCount = 6
*@

@if (Model.IconStyle == LikeVisibility.OnlyLikeCount)
{
    
}

@if (Model.IconStyle == LikeVisibility.IdeaLikes)
{
    <div class="row m-1 align-content-center mx-1">
        <div class="row m-auto px-1">
            <img alt="Like" src="https://image.flaticon.com/icons/svg/25/25297.svg" height="25" width="25"/>
            <p>@Model.LikeCount</p>
        </div>
        <div class="row m-auto px-1">
            <img alt="Fblike" src="https://image.flaticon.com/icons/svg/32/32978.svg" height="25" width="25"/>
            <p>@Model.ShareCount </p>
        </div>
        <div class="row m-auto px-1">
            <img alt="Twitterlike" src="https://image.flaticon.com/icons/svg/32/32727.svg" height="25" width="25"/>
            <p>@Model.RetweetCount </p>
        </div>
    </div>
}

@if (Model.IconStyle == 1)
    {
        <div class="container">
            <div class="row">
                <div class="col-sm-4 align-items-end">
                    <img alt="like" src="https://image.flaticon.com/icons/svg/181/181527.svg" height="50" width="50"/>
                    <p>@Model.LikeCount</p>
                </div>
                <div class="col-sm-4 align-items-end">
                    <img alt="Fblike" src="https://image.flaticon.com/icons/svg/32/32978.svg" height="50" width="50"/>
                    <p>@Model.FbLikeCount</p>
                </div>
                <div class="col-sm-4 align-items-end">
                    <img alt="Twitterlike" src="https://image.flaticon.com/icons/svg/32/32727.svg" height="50" width="50"/>
                    <p>@Model.TwitterLikeCount</p>
                </div>
            </div>
        </div>
    }

    @if (Model.IconStyle == 3)
    {
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-2 align-items-end">
                    <img alt="like" src="https://image.flaticon.com/icons/svg/181/181527.svg" height="50" width="50"/>
                    <p>@Model.LikeCount</p>
                </div>
                <div class="col-sm-2 align-items-end">
                    <img alt="Fblike" src="https://image.flaticon.com/icons/svg/32/32978.svg" height="50" width="50"/>
                    <p>@Model.FbLikeCount</p>
                </div>
                <div class="col-sm-2 align-items-end">
                    <img alt="Twitterlike" src="https://image.flaticon.com/icons/svg/32/32727.svg" height="50" width="50"/>
                    <p>@Model.TwitterLikeCount</p>
                </div>
                <div class="col-sm-2 align-items-end">
                    <img alt="shareCount" src="https://image.flaticon.com/icons/svg/1051/1051309.svg" height="50" width="50"/>
                    <p>@Model.ShareCount</p>
                </div>
                <div class="col-sm-2 align-items-end">
                    <img alt="retweetCount" src="https://image.flaticon.com/icons/svg/9/9148.svg" height="50" width="50"/>
                    <p>@Model.RetweetCount</p>
                </div>
            </div>
        </div>
    }
</section>
