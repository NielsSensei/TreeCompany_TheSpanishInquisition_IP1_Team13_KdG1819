@using Domain.Identity
@using Microsoft.AspNetCore.Identity
@model UIMVC.Models.AddIdeationModel
@inject UserManager<UimvcUser> UserManager

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h1>Een Ideation aanmaken.</h1>

            <form asp-controller="Ideation" asp-action="AddIdeation" method="post" asp-route-cim="@Model"
                  asp-route-project="@ViewData["Project"]" asp-route-user="@UserManager.GetUserId(User)">
                <div class="form-group">
                    <label>ProjectID</label>
                    <input disabled value="@ViewData["Project"]" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="ModuleType">Type</label>
                    <input asp-for="ModuleType" disabled class="form-control" value="Ideation"/>
                </div>
                <div class="form-group">
                    <label asp-for="Parent">Vrije Fases</label>
                    @Html.DropDownList("Parent", new SelectList((System.Collections.IEnumerable) ViewData["Phases"],
                        "Id","Description"),"Kies een fase",
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="Title">Titel van de module</label>
                    <input asp-for="Title" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="ExtraInfo">Geef hier extra informatie</label>
                    <input asp-for="ExtraInfo" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="MediaLink">Geef hier een youtube filmpje eventueel: </label>
                    <input asp-for="MediaLink" class="form-control"/>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-10">
                           <label asp-for="UserVote">Mogen gebruikers stemmen op de ideeÃ«n? </label> 
                        </div>
                        <div class="col-2">
                            <input asp-for="UserVote" class="form-check-input"/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <h6>Geef hier mee welke velden verplicht zijn:</h6>
                    <div class="row">
                        <div class="col-10">
                            <label asp-for="Field">Tekstveld</label> 
                        </div>
                        <div class="col-2">
                            <input asp-for="Field" class="form-check-input"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            <label asp-for="ClosedField">Opsomming</label> 
                        </div>
                        <div class="col-2">
                            <input asp-for="ClosedField" class="form-check-input"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            <label asp-for="MapField">Map</label> 
                        </div>
                        <div class="col-2">
                            <input asp-for="MapField" class="form-check-input"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            <label asp-for="VideoField">Filmpje</label> 
                        </div>
                        <div class="col-2">
                            <input asp-for="VideoField" class="form-check-input"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            <label asp-for="ImageField">Foto</label> 
                        </div>
                        <div class="col-2">
                            <input asp-for="ImageField" class="form-check-input"/></div>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <button class="btn btn-primary" type="submit">Bevestig</button>
                </div>
            </form>

        </div>
    </div>
</div>
