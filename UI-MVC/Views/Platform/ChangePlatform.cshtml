@using Domain.Identity
@using UIMVC.Services
@model Domain.Users.Platform
@inject RoleService RoleService

@section Scripts
{
    <script type="module" src="~/dist/changeplatform.entry.js" defer></script>
}


@{
    ViewBag.Title = "Edit: " + Model.Name;
    Layout = "_Layout";
}

<h2>Aanpassen van @Model.Name</h2>
<form asp-action="ChangePlatform" asp-controller="Platform" asp-route-aum="@Model" method="post">
    <div class="form-group">
        <label asp-for="Name">Naam van het platform</label>
        <input asp-for="Name" class="form-control" value="@Model.Name"/>
    </div>
    <div class="form-group">
        <label asp-for="Url">Een verkorte URL</label>
        <input asp-for="Url" class="form-control" value="@Model.Url"/>
    </div>
    <div class="row">
        <input type="submit" class="btn btn-primary" value="Opslaan"/>
    </div>
</form>
<br/>
<section class="container">
    <div class="row">
        <div class="col-8">
            <h2>Wijs een admin toe aan het project</h2>
            @Html.Partial("Partials/AssignUserPartial", new AssignUserModel() {PlatformId = Model.Id})
        </div>
        <div class="col-4">
            <h4>Admins van dit platform</h4>
            @foreach (UIMVCUser admin in await RoleService.GetAllAdmins(Model.Id))
            {
                <div class="row">
                    <div class="col-2">
                        @Html.Partial("Partials/RemoveUserPartial", new AssignUserModel() {PlatformId = Model.Id, UserMail = admin.Email})
                    </div>
                    <div class="col-10">
                        <p>@admin.Name</p>
                        <p>@admin.Email</p>
                    </div>
                </div>
            }
            <h4>Moderators van dit platform</h4>
            @foreach (UIMVCUser admin in await RoleService.GetAllModerators(Model.Id))
            {
                <div class="row">
                    <div class="col-2">
                        @Html.Partial("Partials/RemoveUserPartial", new AssignUserModel() {PlatformId = Model.Id, UserMail = admin.Email})
                    </div>
                    <div class="col-10">
                        <p>@admin.Name</p>
                        <p>@admin.Email</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>