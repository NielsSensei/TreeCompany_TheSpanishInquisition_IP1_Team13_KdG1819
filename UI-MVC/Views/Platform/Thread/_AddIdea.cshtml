@using Domain.Identity
@using Microsoft.AspNetCore.Identity
@inject UserManager<UimvcUser> UserManager
@model UIMVC.Models.AddIdeaModel

<div class="container">
    <div class="row" id="newIdea">
        @using (Html.BeginForm("AddIdea", "Thread", new { user = UserManager.GetUserId(User),
            parent = Model.ParentId, ideation = Model.IdeationQuestionId, form = @Model.FormCollection }, FormMethod.Post, null, 
            new { enctype = "multipart/form-data", @class = "row" }))
        { 
            <div class="col-6">
                <div class="form-group">
                    <label>Titel:</label>
                    @Html.TextBox("Title", "", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Text:</label>
                    @Html.TextBox("FieldText", "", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Geef hier een youtube link:</label>
                     @Html.TextBox("FieldVideo", "", new { @class = "form-control" })
                </div>
                <input class="btn btn-outline-primary" type="submit" name="submit" value="Voeg jouw idee toe" />
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Voeg hier de coordinaten toe van je map: <a href="@Url.Action("FAQ", "Home")">
                        Hoe vind ik deze? </a></label>
                    @Html.TextBox("newIdeaMapX", "Eerste coordinaat", new {@class = "form-control"})
                    <br/>
                    @Html.TextBox("newIdeaMapY", "Tweede coordinaat", new {@class = "form-control"})
                </div> 
                <div class="form-group">
                    <label>Geef hier een foto:</label>
                    @Html.TextBox("FieldImage", "", new { @class = "form-control", type="file" })
                </div>
            </div>
        }
    </div>    
</div>