@using Domain.Identity
@using Microsoft.AspNetCore.Identity
@inject UserManager<UimvcUser> UserManager
@model UIMVC.Models.AddIdeaModel

<div class="row text-center" id="newIdea">
    <form asp-controller="Thread" asp-action="AddIdea" asp-route-ideationQuestion="@Model.IdeationQuestionId"
          asp-route-user="@UserManager.GetUserId(User)" asp-route-parent="@Model.ParentId">
        <div class="form-group">
            <label>Titel:</label>
            @Html.TextBox("newIdeaTitle","", new { @class="form-control"})
        </div>
        @* Voorlopig enkel gewoon Field *@
        <div class="form-group">
            <label>Text:</label>
            @Html.TextArea("newIdeaField","", new { @class="form-control"})
        </div>
        <button class="btn btn-outline-primary" type="submit">Voeg jouw idee toe</button>
    </form>
</div>