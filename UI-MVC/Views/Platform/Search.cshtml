@using Domain.Users
@model IEnumerable<Domain.Users.Platform>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Gevonden platformen voor <em>@ViewData["search"]</em></h2>
<table class="table">
    <tr>
        <th>PlatformId</th>
        <th>URL</th>
    </tr>
    @foreach (Platform platform in Model)
    {
        <tr>
            <td>
                <a asp-action="Index" asp-controller="Platform" asp-route-id="@platform.Id">@platform.Name</a>
            </td>
            <td>
                <p>@platform.Url</p>
            </td>
        </tr>
    }
</table>