@using Domain.Projects
@using UIMVC.Services
@model Domain.Users.Platform
@inject ProjectService ProjectService
@inject RoleService RoleService
@{
    ViewData["Title"] = Model.Name;
}

<br/>
<section class="container">   
   <div class="row">
       <div class="col-5">
           <section class="card">
               <div class="card-header pb-0">
                   <div class="card-title">
                       <div class="row">
                           <div class="col-8">
                               <h1>@Model.Name</h1> 
                           </div>
                           <div class="col-4">
                              <img alt="icon" type="image" src="@Model.IconImagePath" width="100" height="100"/> 
                           </div>
                       </div>
                   </div>
               </div>
               <div class="card-body">
                   <img alt="frontpage" src="@Model.FrontPageImagePath" >
               </div>
           </section>
       </div>
       <div class="col-7">
           @if (ProjectService == null || !ProjectService.CollectPlatformProjects(Model).Any())
           {
                       <h4>Er zijn geen projecten voor dit platform</h4>
           }
           else
           {
                foreach (Project project in ProjectService.CollectPlatformProjects(Model))
                {
                    if (project.Visible)
                    {
                        @Html.DisplayFor(m => project)
                    }
                }
           }
       </div>
   </div> 
</section>